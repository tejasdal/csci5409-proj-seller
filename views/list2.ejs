<h1 class="display-4">All Products</h1>

<table class="table table-striped table-bordered">

    
    <thead class="thead-dark">
    <tr>
        <th>ID</th>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Product Price (CAD)</th>
        <th>Quantity on Hand</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% prod.forEach(function(product){ %>
        <tr>
            <td><%= product.id %></td>
            <td><%= product.product_id %></td>
            <td><%= product.product_name %></td>
            <td><%= product.product_price %></td>>
            <td><%= product.qoh %></td>
            <td>
                <form class="d-inline" action="/products/delete/?id=<%= product.id %>" method="post" onsubmit="return confirm('Are you sure you want to delete the entry?') ">
                    <input type="Submit" value="Delete" class="btn btn-outline-danger">
                </form>
            </td>
            <td>
                <form class="d-inline" action="/products/edit/?id=<%= product.id %>" method="post">
                    <input type="Submit" value="Edit" class="btn btn-outline-dark">
                </form>
            </td>
        </tr>
    <%  }) %>
    </tbody>
</table>


<div class="row" width='100'>

        <% prod.forEach(function(product){ %>
        
            <div class="card border-black m-3" style="width: 18rem;">
                <img class="card-img-top" src="https://i.pinimg.com/originals/55/f5/66/55f566d2d1fbcfd63c73209592a7615c.jpg" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-text ">Name: <%= product.product_name %></h5>
                  <h6 class="card-subtitle mb-2 text-muted">Price: $<%= product.product_price %> </h6>
                  <h6 class="card-subtitle mb-2 text-muted">Quantity on Hand: <%= product.qoh %> </h6>
                
                <form class="d-inline" action="/products/edit/?id=<%= product.id %>" method="post">
                    <input type="Submit" value="Edit" class="btn btn-outline-dark">
                </form>
                <form class="d-inline" action="/products/delete/?id=<%= product.id %>" method="post" onsubmit="return confirm('Are you sure you want to delete the entry?') ">
                    <input type="Submit" value="Delete" class="btn btn-outline-danger">
                </form>
                
                </div>
            </div>

        <%  }) %>

</div>